<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    android:background="#E0F7FA"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlayer1"
            style="@style/textView_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hai" />

        <TextView
            android:id="@+id/tvResult1"
            style="@style/textView_result"
            android:layout_width="@dimen/circle_background_diameter"
            android:layout_height="@dimen/circle_background_diameter"
            android:text="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlayer2"
            style="@style/textView_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hai" />

        <TextView
            android:id="@+id/tvResult2"
            style="@style/textView_result"
            android:layout_width="@dimen/circle_background_diameter"
            android:layout_height="@dimen/circle_background_diameter"
            android:background="@drawable/shape_red_background"
            android:text="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlayer3"
            style="@style/textView_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hai" />

        <TextView
            android:id="@+id/tvResult3"
            style="@style/textView_result"
            android:layout_width="@dimen/circle_background_diameter"
            android:layout_height="@dimen/circle_background_diameter"
            android:text="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlayer4"
            style="@style/textView_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hai" />

        <TextView
            android:id="@+id/tvResult4"
            style="@style/textView_result"
            android:layout_width="@dimen/circle_background_diameter"
            android:layout_height="@dimen/circle_background_diameter"
            android:background="@drawable/shape_green_background"
            android:text="2" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bin" />

    </RelativeLayout>

</LinearLayout>